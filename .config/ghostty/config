theme = catppuccin-macchiato.conf
background-opacity = 0.95
window-decoration = false

# font-family = "JetBrainsMono Nerd Font"
font-family = "FiraCode Nerd Font Light"

shell-integration = zsh

keybind = alt+enter=toggle_fullscreen
keybind = ctrl+enter=unbind
keybind = ctrl+v=unbind

# better clipboard
keybind = performable:ctrl+alt+c=copy_to_clipboard
keybind = performable:ctrl+alt+v=paste_from_clipboard
keybind = performable:ctrl+alt+a=select_all

# UI
keybind = ctrl+shift+plus=increase_font_size:1
keybind = ctrl+equal=reset_font_size
keybind = ctrl+shift+eight=reset_font_size
keybind = ctrl+minus=decrease_font_size:1
keybind = ctrl+alt+up=resize_split:up,20
keybind = ctrl+alt+down=resize_split:down,20
keybind = ctrl+alt+left=resize_split:left,20
keybind = ctrl+alt+right=resize_split:right,20

# navigation
keybind = performable:ctrl+h=new_split:right
keybind = performable:ctrl+l=new_split:down
keybind = alt+up=goto_split:up
keybind = alt+left=goto_split:left
keybind = alt+down=goto_split:down
keybind = alt+right=goto_split:right

# text movement
# keybind = ctrl+left=esc:b
# keybind = ctrl+right=esc:f
# keybind = ctrl+home=esc:<
# keybind = ctrl+end=esc:>

# misc
keybind = performable:ctrl+alt+x=clear_screen